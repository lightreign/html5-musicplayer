{% from 'buttons.html.twig' import button as button %}    
    <div class="modal fade" id="playlist-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Playlists</h4>
                </div>
                <div class="modal-body">
                    <div class="hidden error_msg alert alert-danger">
                        <h4>Oops!</h4>
                        <div class="message"></div>
                    </div>

                    <div class="hidden success_msg alert alert-success">
                        <h4>Success!</h4>
                        <div class="message"></div>
                    </div>

                    <table class='table playlist-table'>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th class="col-md-2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for playlist in playlists %}
                                <tr id='playlist{{ playlist.id }}'>
                                    <td class="col-md-2">{{ playlist.name }}</td>
                                    <td class="col-md-2">{{ playlist.description }}</td>
                                    <td class="col-md-2">
                                        <a href="#" class="rmplaylist" playlistId="{{ playlist.id }}"><span class="glyphicon glyphicon-remove" title="Delete Playlist"></span></a>
                                    </td>
                                </tr>
                             {% endfor %}
                        </tbody>
                    </table>

                    <h5>New Playlist</h5>

                    <form class="form-inline add-section" id="playlist-form">
                        <div class="form-group">
                            <label class="sr-only" for="playlist-name">Name</label>
                            <input class="form-control" type="text" id="playlist-name" placeholder="Name"/>
                        </div>

                        <div class="form-group">
                            <label class="sr-only" for="username">Description</label>
                            <input class="form-control" type="text" id="playlist-description" placeholder="Description"/>
                        </div>

                        <button type="submit" id="add-playlist" class="btn btn-success" disabled>
                            <span class="glyphicon glyphicon-plus"></span>
                            {{ button('playlist', use_icons) }}
                        </button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>